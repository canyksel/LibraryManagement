@model LibraryManagement.Entities.Concrete.Book
@using LibraryManagement.MvcWebUI.HtmlHelpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-4">
                <label for="bookName">Kitap Adı:</label>
                <h4>@Model.BookName</h4>
            </div>

            <div class="col-md-8" style="border-style: solid; border-color: #937341; border-width:1.75px;padding:10px">

                <div class="form-group">
                    <label for="bookName">Kitap Adı</label>
                    <div class="form-control" id="bookName">@Model.BookName</div>
                </div>
                <div class="form-group">
                    <label for="authorName">Yazar Adı</label>
                    <div class="form-control" id="authorName">@Model.AuthorName</div>
                </div>
                <div class="form-group">
                    <label for="publisherName">Yayınevi Adı</label>
                    <div class="form-control" id="publisherName">@Model.PublisherName</div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="publisDate">Yayınlanma Tarihi</label>
                        <div class="form-control" id="publisDate">@Model.PublishDate.Date.ToShortDateString()</div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="language">Dil</label>
                        <div class="form-control" id="language">@Model.Language</div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="quantity">Stok Adedi</label>
                        <div class="form-control" id="quantity">@Model.Quantity</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="edition">Baskı</label>
                        <div class="form-control" id="edition">@Model.Edition</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="bookCost">Fiyat</label>
                        <div class="form-control" id="bookCost">@Model.BookCost</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="pageNumber">Sayfa Sayısı</label>
                        <div class="form-control" id="pageNumber">@Model.PageNumber</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inStock">Stok Durumu</label>
                        <div class="form-control" id="inStock">@Html.YesNo(@Model.InStock)</div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="bookDescription">Kitap Özeti</label>
                    <div class="form-control" id="bookDescription" style="height:270px">@Model.BookDescription</div>
                </div>
                <br />
                <a href='@Url.Action("Index","Books")' class="btn btn-default" style="width:280px; text-align:center; border-style:solid; border-color:#937341; border-width:0.5px" title="Listeye geri dön">
                    Listeye Geri Dön
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
}


